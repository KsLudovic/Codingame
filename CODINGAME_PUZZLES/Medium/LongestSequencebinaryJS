import java.util.*;
import java.io.*;
import java.math.*;


class Solution {

    public static void main(String args[]) {
        String[] b = new Scanner(System.in).nextLine().split("0");
        int max = 1;
        for(int i = 0; i < b.length-1; i++) max = Math.max(max, b[i].length() + b[i+1].length() + 1);
        System.out.println(max);
    }
}
